{
  "name": "goldenmill-api",
  "version": "1.0.0",
  "description": "API server for GoldenMill products",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon src/index.ts",
    "build": "prisma generate && tsc && npm run generate-sitemap",
    "generate-sitemap": "node scripts/generateProductSitemap.js"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^3.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "path": "^0.12.7",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^6.3.1"
  },
  "nodemonConfig": {
    "watch": [
      "*.js"
    ],
    "ignore": [
      "node_modules"
    ],
    "exec": "node ./index.js",
    "ext": "js"
  }
}
