{
  "name": "goldenmill-api",
  "version": "1.0.0",
  "description": "API server for GoldenMill products",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "prisma generate && tsc && npm run generate-sitemap",
    "generate-sitemap": "node scripts/generateProductSitemap.js",
    "generate-sitemaps": "ts-node scripts/generateSitemaps.ts",
    "optimize-svg": "ts-node scripts/optimizeSVG.ts",
    
    "start": "pm2 start ecosystem.config.js --only goldenmill-server",
    "stop": "pm2 stop goldenmill-server",
    "restart": "pm2 restart goldenmill-server",
    "logs": "pm2 logs goldenmill-server",
    "monit": "pm2 monit goldenmill-server"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^3.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "path": "^0.12.7",
    "pg": "^8.13.1",
    "react-helmet-async": "^2.0.5",
    "sharp": "^0.34.1",
    "svgo": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "pm2": "^5.3.1",
    "prisma": "^6.3.1"
  },
  "nodemonConfig": {
    "watch": [
      "*.js"
    ],
    "ignore": [
      "node_modules"
    ],
    "exec": "node ./index.js",
    "ext": "js"
  }
}
